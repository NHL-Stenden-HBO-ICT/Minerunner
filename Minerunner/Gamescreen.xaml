<Page x:Class="Minerunner.Gamescreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Minerunner"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Gamescreen">

    <Canvas Background="White">
      <Canvas x:Name="ChunkCanvas" Canvas.Left="0" Width="800" />
    <Canvas x:Name="gameCanvas" Background="White" Focusable="true" KeyUp="OnKeyUp" KeyDown="OnKeyDown">
        <Rectangle x:Name="player" Height="100" Canvas.Left="350" Fill="Magenta" Canvas.Top="175" Width="100"/>
    </Canvas>
</Page>
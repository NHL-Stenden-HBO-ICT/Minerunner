<Page x:Class="Minerunner.Titlescreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Minerunner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Titlescreen"
      KeepAlive="True">

    <Grid Background="White">
        <Button Content="START" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Height="75" Width="300" Click="Start_Click" FontWeight="Bold" FontSize="14"/>
        <Button Content="HIGHSCORE" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Height="75" Width="300" FontSize="14" FontWeight="Bold" Click="Highscores_Click"/>
        <Button Content="INSTELLINGEN" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Height="75" Width="300" FontWeight="Bold" FontSize="14" Click="Settings_Click"/>
        <Label Content="MINERUNNER" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Height="70" Width="475" FontFamily="Arial Black" FontSize="60" HorizontalContentAlignment="Center"/>
        <Button Content="X" HorizontalAlignment="Right" Background="Red" Foreground="White" Margin="0,10,10,0" VerticalAlignment="Top" Height="20" Width="20" Click="Exit_Click"/>
    </Grid>
</Page>

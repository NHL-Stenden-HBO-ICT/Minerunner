<Page x:Class="Minerunner.Titlescreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Minerunner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Titlescreen">

    <Grid Background="White">
        <Button Content="START" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Height="35" Width="275" Click="Start_Click" FontWeight="Bold" FontSize="14"/>
        <Button Content="HIGHSCORE" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Height="35" Width="275" Click="Start_Click" FontSize="14" FontWeight="Bold"/>
        <Button Content="INSTELLINGEN" HorizontalAlignment="Center" Margin="0,260,0,0" VerticalAlignment="Top" Height="35" Width="275" Click="Start_Click" FontWeight="Bold" FontSize="14"/>
        <Label Content="MINERUNNER" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Height="35" Width="275" FontFamily="Arial Black" FontSize="26" HorizontalContentAlignment="Center"/>
    </Grid>
</Page>

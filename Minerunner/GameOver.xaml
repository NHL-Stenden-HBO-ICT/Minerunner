<Page x:Class="Minerunner.GameOverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Minerunner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="gameover">


    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <Label Name="gameover_TXT" Grid.Column="1" Grid.Row="0" Content="Game over" FontSize="70" ></Label>
        <Label Name="Highscore_TXT" Grid.Column="1" Grid.Row="1" Content="Highscore: " FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center"></Label>
        <Button Name="Replay_BTN" Grid.Column="1" Grid.Row="1"  VerticalAlignment="Center" HorizontalAlignment="Center" Content="Replay" FontSize="15" Click="Replay_BTN_Click"></Button>
        <Button Name="Backtomainmenu_BTN"  Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Back to main menu" FontSize="15" Click="Backtomainmenu_BTN_Click"></Button>

    </Grid>
</Page>
